<div class='field'>
    <%= f.select :organization_id, options_from_collection_for_select(Refinery::Profiles::Organization.order(:name), :id, :name, f.object.organization_id) %>
    <%= f.select :department_id, options_from_collection_for_select(Refinery::Profiles::Department.order(:name), :id, :name, f.object.department_id) %>
    <%= f.select :title_id, options_from_collection_for_select(Refinery::Profiles::Title.order(:name), :id, :name, f.object.title_id) %>
    <%= f.hidden_field :_destroy %>
    <%= link_to_function refinery_icon_tag('delete.png'), "remove_fields(this) " %>
</div>