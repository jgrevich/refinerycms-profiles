<%= form_for [:admin, @profile_category] do |f| -%>
  <%= render :partial => "/refinery/admin/error_messages", :locals => {
          :object => @profile_category,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>
  
    <%= render "/refinery/admin/form_actions",
               :f => f,
               :continue_editing => true,
               :delete_title => t('delete', :scope => 'refinery.profiles.admin.categories.category') %>
               
  <%= render :partial => "/refinery/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'refinery.admin.profile_categories.profile_category'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @profile_category.name)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
