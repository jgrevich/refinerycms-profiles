<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
  <% end %>
  <% if @profile_categories.any? %>
    <div class='pagination_container'>
      <%= render :partial => 'profile_categories' %>
    </div>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'shared.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <% if Admin::ProfileCategoriesController.searchable? %>
      <li>
        <%= render :partial => "/shared/admin/search",
                    :locals => {
                      :url => admin_profile_categories_url
                    } %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), new_admin_profile_category_url,
                   :class => "add_icon" %>
    </li>
    <li>
      <%= link_to t('.manage_profiles'), admin_profiles_url,
                   :class => "edit_icon" %>
    </li>
  </ul>
</div>