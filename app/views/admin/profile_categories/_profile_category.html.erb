<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(profile_category) -%>">
  <span class='title'>
    <%= profile_category.name %>
    <span class="preview"></span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), category_profiles_url(profile_category),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_profile_category_path(profile_category),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_profile_category_path(profile_category),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => profile_category.name),
        :method => :delete %>
  </span>
</li>
