<section id='records'>
  <%= render :partial => 'records' %>
</section>
<aside id='actions'>
  <ul>
    <% if Admin::AnnouncementsController.searchable? %>
      <li>
        <%= render :partial => "/shared/admin/search",
                    :locals => {
                      :url => admin_announcements_url
                    } %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), new_admin_announcement_url,
                   :class => "add_icon" %>
    </li>

    <li>
      <%= link_to t('.manage_categories'), admin_announcement_categories_url,
                   :class => "edit_icon" %>
    </li>
  </ul>  
</aside>
<%= render :partial => '/shared/admin/make_sortable',
            :locals => {
              :tree => false
            } if !searching? and Admin::ProfilesController.sortable? and Profile.count > 1 %>
