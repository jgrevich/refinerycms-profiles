<div class='field'>
    <%= f.select :label, options_for_select(%w{\  Lab Office Other }, f.object.label) %><br />
    <%= f.text_field :building_acronym, :placeholder => 'Building Acronym', :size => 14, :tooltip => "Please use the building acronym (e.g. Powell-Focht Bioengineering Hall => PFBH)" %><br />
    <%= f.text_field :room_number, :placeholder => 'Room Number', :size => 14 %>
	
    <%= f.hidden_field :_destroy %>
    <%= link_to_function refinery_icon_tag('delete.png'), "remove_fields(this) " %>
</div>
