<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(profile) -%>">
  <span class='title'>
    <% if profile.affiliation %>
        <%= "#{profile.name}, #{profile.affiliation.title}, #{profile.affiliation.department}, #{profile.affiliation.organization}" %>
    <%- else -%>
        <%= "#{profile.name}" %>
    <%- end -%>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), profile_path(profile),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_profile_path(profile),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_profile_path(profile),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => profile.first_name),
        :method => :delete %>
  </span>
</li>
